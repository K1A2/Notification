<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        android:background="@color/coloractivitybackgroundDark"
        tools:context=".SelectModeActivity">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:text="@string/selectmodeactivity_title"
                android:textColor="@color/textActivityNormal"
                android:gravity="center"
                android:textSize="40dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

    </LinearLayout>

    <com.k1a2.notification.view.SelectModeView
            android:id="@+id/selectmode_select_card"
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <Button
            android:text="@string/selectview_button_select"
            android:id="@+id/selectmode_button_select"
            android:textColor="@color/textActivityNormal"
            android:layout_alignParentBottom="true"
            android:background="@drawable/button_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

</RelativeLayout>